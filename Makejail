INCLUDE options/options.makejail

ARG burpsuite_tag=latest

FROM --entrypoint gh+AppJail-makejails/burpsuite burpsuite:${burpsuite_tag}

STOP

STAGE create

CMD --local xhost +

STAGE custom:burpsuite_open

ARG display=:0

ENV DISPLAY=${display}
USER burpsuite
WORKDIR /opt/burpsuite
ENTRYPOINT java -jar
RUN burpsuite.jar
